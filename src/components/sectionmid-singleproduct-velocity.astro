---
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";

const sliderContent = [
  {
    icon: "ph:codesandbox-logo-thin",
    category: "Web Design / Dev",
    title: "Velocity7",
    paragraph:
      "Our high-performance website theme, developed over 5 years with a focus on performance and conversion through UX.",
    btntxt: "Purchase",
    price: "1445",
    style: "outline",
    link: "/web-design",
  }
]
---



<style>
  .carousel-cell { padding: 10px 20px; }

  /* Glass-card effect dial in, needs a moving background css only if possible */
  #glass-card {
    border-radius: 30px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(30px);
    border: 2px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    padding: 40px 20px;
    transition-duration: 200ms;
  }
  #glass-card:hover {
    box-shadow: 0 15px 20px #00000010, 0 15px 20px #00000010;;
  }
  
  [astro-icon="bgIcon"] {
        color: #a600ff10;
        /* OR */
        fill: #a600ff10;
  }
</style>


<main class="my-8 md:my-16">
<div id="heroSection" class="flex flex-col lg:flex-row justify-center items-center">
  
  <div id="leftContainer" class="w-full lg:w-3/5 px-4 md:px-8">

    <div class="py-6">
      <h2 style="heroTagline" class="text-2xl md:text-3xl lg:text-5xl w-full font-bold tracking-tight">
        Out-of-the-box everything.
      </h2>
      <p class="text-sm lg:text-lg mt-6 pr-8 text-slate-700 w-full lg:max-w-3xl">
        We help you avoid endless subscriptions for the sake of web builders. Low-code development meets infinite extendability 
        thanks to 30+ integrations and 50+ components. Pre-set conversion tracking, Image optimisation and SEO tools built in.
      </p>
      
      <div class="mt-12 flex flex-col sm:flex-row gap-3">
        <a href="https://g2ok5807scs.typeform.com/to/tCmzlDza" rel="noopener" class="rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 px-5 py-2.5 bg-black text-white hover:bg-gray-800 border-2 border-transparent flex gap-1 items-center justify-center">
          <svg viewBox="0 0 24 24" class="w-4 h-4">
            <Icon class="text-white" name="ph:chat-teardrop-dots-light" />
          </svg>

          Book a call

        </a>
        <a href="https://aidxn.com/velocity7/" rel="noopener" class="rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 px-5 py-2.5 bg-white border-2 border-black hover:bg-gray-100 text-black flex gap-1 items-center justify-center">
          <svg viewBox="0 0 24 24" class="w-4 h-4">
            <Icon class="text-black" name="ph:lightning-fill" />
          </svg>
          
          More info

        </a>
      </div>
    </div>
  </div>

  <div id="rightContainer" class="w-full lg:w-2/5 px-4 md:px-8 z-5">


    <div class="w-full h-full">
      { sliderContent.map((item) => (
        <div id="glass-card" class="carousel-cell w-full px-8 py-32">
          <div id="slideContainer" class="flex flex-col gap-y-4">
            <Icon name="bgIcon" class="h-16 w-16" name={item.icon} />
            <div id="textContainer" class="w-full flex flex-col gap-y-4">
              <span class="text-gray-700 mr-3 font-thin uppercase text-md">{item.category}</span>
              <h3 class="font-semibold text-lg md:text-xl lg:text-2xl">{item.title}</h3>{" "}
              <p class="text-xs lg:sm max-w-3xl font-regular text-slate-500 pr-8 leading-relaxed">{item.paragraph}</p>
              <p class="text-xl lg:text-3xl font-semibold text-black cursor-auto my-3">from ${item.price}<span class="text-lg lg:text-2xl font-normal"></span></p>
              <p class="text-slate-500 mt-8 leading-relaxed">
                <Link 
                  class="mr-4"
                  href={item.link || "#"}
                  block
                  style={item.style ? "primary" : "outline"}>
                  {item.btntxt || "Get Started"}
                </Link>
              </p>
            </div>
          </div>
        </div>
        ))
      }
    </div>


  </div>
</div>

</main>
